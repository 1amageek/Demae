{
	"firestore": {
		"rules": "firestore.rules"
	},
	"functions": {
		"source": "dist/functions",
		"predeploy": [
			"npm run lint-functions",
			"npm run lint-app",
			"npm run typecheck-app",
			"npm run build-functions",
			"npm run build-app",
			"npm run copy-deps",
			"npm run install-deps"
		]
	},
	"hosting": {
		"public": "dist/public",
		"rewrites": [
			{
				"source": "**/**",
				"function": "hosting"
			}
		],
		"predeploy": "npm run build-public"
	},
	"emulators": {
		"firestore": {
			"port": "8080"
		},
		"functions": {
			"port": "5000"
		},
		"database": {
			"port": "9000"
		}
	}
}